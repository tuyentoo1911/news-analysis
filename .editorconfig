root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{html,htm}]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.{py,pyi}]
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,css,scss,json}]
indent_style = space
indent_size = 2
